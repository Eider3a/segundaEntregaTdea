<!-- To add an item into the cart once you hit the 'add to cart' button-->
<%- include('../includes/head.ejs') %>

<body>
    
    <%- include('../includes/navigation.ejs') %>
    <div>
        <% if(cartItems.length > 0){%>
            <ul>
                <% for(cartItem of cartItems){%>
                    <li style="display:block">
                        <div>
                            <%= cartItem.product.title %> (<%= cartItem.qty%>)
                            <form style="display:inline" action="/delete_item_cart" method="POST">
                                <input type="hidden" name="itemId" value="<%= cartItem.product.id%>">
                                <input type="submit" name="delete" value="Delete">
                            </form>
                        </div>
                    </li>
                    
                <% }%>
            </ul>
            
        <% } else {%>
        <h1>You don't have any products yet</h1>
        <% }%>
    </div>

<%- include('../includes/end.ejs')%>